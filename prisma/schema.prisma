generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RealEstate {
  id Int @id @default(autoincrement())
  name String
  area String
  type String
  postCode Int
  address String
  space Int
  layout String
  value Int
  description String
  recommendation Int @default(1)
  year Int @default(1)
  floor Int @default(1)
  allFloor Int @default(1)
  buildingType String @default("apartment")
  createdAt DateTime @default(now())
}